<UserControl x:Class="TCPTools.组件.PortBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TCPTools.组件"
             mc:Ignorable="d"
             Name="portBox"
             d:DesignHeight="300" d:DesignWidth="300" Width="40" Height="18">
    <Grid>
        <TextBox x:Name="portTextBox" Text="{Binding ElementName=portBox,Path=Port,Mode=TwoWay}" TextAlignment="Center" KeyDown="portTextBox_KeyDown" TextChanged="portTextBox_TextChanged"/>
    </Grid>
</UserControl>
